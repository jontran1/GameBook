<html>
<head>
</head>

<link rel="stylesheet" href="/specificGamePage.css">
<div class="Game-Wrapper">
<div  class="TitleBox">
  <div class="TitleBox-title">{{ Game.name }}</div>
  
  
  <div class="TitleBox-left">{{#each Game.tags}}{{ tag }}{{/each}}</div>
  <div class="TitleBox-right">{{ Game.developer }}</div>
</div>


<div class = "GameInfo-Wrapper">
<div class = "gameBox">
  
    <img src={{ Game.imageURL }} class="img" width="410" height="200">
  
  <p class="desc"> {{Game.description}}</p>
</div>



<iframe class="video" src={{ Game.videoURL }} frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
</div>

<div class="Table-Wrapper">

<table>
    <caption class="Table-Title">Top Players</caption>
   <tr>
    <th>Name</th>
    
  </tr>

{{#each topPlayers}}
  <tr>
    <td onclick="window.location.href='{{ page }}'">{{ name }}</td>
  </tr>
{{/each}}

</table>

<table>
     <caption class="Table-Title">Most Hours Played</caption>
 

  <tr>
    <th>Name</th>
    <th>Hours</th>
    
  </tr>

  

{{#each mostHours}}
  <tr>
    <td onclick="window.location.href='{{ page }}'">{{ name }}</td>
    <td onclick="window.location.href='{{ page }}'">{{ hours }}</td>
  </tr>
{{/each}}

</table>

</div>
<div class="Table-Wrapper">
<table class="allPlayers">
     <caption class="Table-Title">All Players</caption>
 


{{#each AllPlayers}}
  <tr>
    <td class="playerTable" >
        <img src={{ profileImage }} class="playerImage" width="100" height="100">
        <div class="playerName">{{ playerName }}</div>
    </td>
    
  </tr>
{{/each}}
  


</table>
</div>

</div>
</html>